

<section id ="owl">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2 col-md-10 offset-md-1">
        <div class="sec-heading text-center">
          <h6><%= title ? title : "Ads for you" %></h6>
          <hr class="w-25 mx-auto pt-5">
        </div>
      </div>
    </div>
  <div class="testimonal-box">
    <div class="container" style="margin-top:30px;">
      <div class="row">
        <div class="col-lg-12">
          <div class="team-slider owl-carousel">
            <% ads.each do |ad| %>
              <div class="single-box text-center">
                <div class="img-area">
                  <%= image_tag(ad.avatar3, class: "img-fluid move-animation", style: "width:100%; height:250px; border-radius-top:10px;")%>
                </div>
                <div class="info-area">
                  <h4 style="margin-top:20px"><%= ad.title %></h4>
                  <div class="ad-data">
                    <span><%= ad.price %> Rs</span>
                    <span>City : <%= ad.city%></span>
                  </div>
                  <%= link_to "Show" , ad_path(ad) %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
<style>

.ad-data {
  display: flex;
  flex-direction: row;
  align-item: center;
  justify-content: space-between;
}

#owl{
  width: 100%;
  padding: 30px 0;
}
.sec-heading h6{
  margin-top:10px;
   font-size: 45px;
}
.single-box{

  border: 1px solid #ddd;
  border-radius: 20px;
  overflow: hidden;
  background-color: #fff;

}
.info-area{
  padding: 0 20px 45px;
}
.img-area{
  overflow: hidden;
  /* padding: 15px 0 15px; */
}
.info-area h4{
  font-weight: 600;
}
.info-area a{
  display: inline-block;
  margin: 25px 0 0;
  background-color: #6ab04c;
  color: #fff;
  padding: 10px 35px;
  border-radius: 4px;
}
.team-slider .owl-dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: -35px;
  text-align: center;
  width: 100%;
}
.team-slider button.owl-dot{
  width: 16px;
  height: 16px;
  display: inline-block;
  margin: 0 6px;
  text-align: center;
  border-radius: 50%;
  background-color: #262626;
}
.team-slider button.owl-dot.active{
  background-color: #6ab04c;
}
</style>
<script>
setTimeout(() => {
 $('.team-slider').owlCarousel({
   loop: true,
   nav: false,
   autoplay:true,
   autoplayTimeout:5000,
   smartSpeed: 450,
   margin: 20,
   responsive: {
     0:{
       items:1
     },
     768:{
       items:2
     },
     991:{
       items:3
     },
     1200:{
       items:3
     },
     1920:{
       items:3
     }
   }
 });
}, 500);

</script>

