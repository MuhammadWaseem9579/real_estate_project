
<div class="body-3">
    <div class="container" id ="ttest">
    <% obj.each do |ad| %>
        <div class="wwrapper mt-2">


            <div class="card-2">
                <div class="card-thumb-2">
                    <%= image_tag(url_for(ad.avatar3),style: "width:100%; height:350px; border-radius:10px; object-fit: cover; background-size: cover;")%>
                </div>
                <div class="card-body-2">
                   <h3 class="card-title mt-5"style="font-weight:bolder"><%=ad.title%></h3>
                    <h5 class="card-price mt-2"style="font-weight:bold">PKR : <span style="color:green"><%=ad.price%></span></h5>
                    <p style="font-size:20px">Property-Type : <span style="color:green"><%=ad.property_type%></span></p>
                    <p style="font-size:20px">Address : <span style="color:green"><%=ad.address%></span></p>
                    <p style="font-size:20px">Area : <span style="color:green"><%=ad.area%></span></p>
                    <h5 class="text-primary card-title">Get In Touch To Buy A New House In <%=ad.city%></h5>
                    <p> Created at: <span style="color:green"><%=  time_ago_in_words(ad.created_at) %></span></p>
                    <%= link_to "Details", ad_path(ad),class:"btn btn-success pl-4 pr-4",style:"border: 2px solid #555;" %>

                    <hr>
                </div>
            </div>


          </div>
          <% end%>
        </div>
      </div>
<style>

.body-3{
  display: flex;
  justify-content: center;
  align-items: center;
  /* font-family: 'dosis'; */
  color: #080808;
}
#ttest{
  position: relative;
  width: 950px;
  padding-bottom: 40px;
  overflow: hidden;
}
.wwrapper{
  display: flex;
}
.wwrapper .card-2{
  border-radius: 20px;
  box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
  margin: 0 10px;
}
.card-thumb-2{
  width: 100%;
  height: 350px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  position: relative;
}

.card-body-2{
  width: 120%;
  min-height: 100%;
  height: auto;
  margin-left: 30px;
  position: relative;
  padding-bottom: 40px;
}

@media (max-width: 768px){
  #ttest{
      width: 100%;
      margin: auto;
  }
  .card-2{
      flex-direction: column;
  }
  .card-thumb-2{
      width: 95%;
      /* border-radius: 5px; */
  }
  .card-body-2{
      width: 95%;
      min-height: auto;
      margin-left: 0;
  }
}
</style>
