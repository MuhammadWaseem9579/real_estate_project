<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 col-md-offset-3">
          <div class="card-9">
            <div class="card-header bg-dark" style="color:White">
              <h2>Edit Profile<% resource_name.to_s.humanize %></h2>
            </div>
            <div class="card-body ">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="field form-group">
                <% if resource.avatar.attached? %>
                    <div class="field form-group">
                        <image src="<%= (url_for(resource.avatar.variant(resize: "150x150!"))) %>" class="rounded-circle",style="allign-center"></div>
                <% else %>
                    <p>No image found</p>
                <% end %>
              </div>
            <div class="field form-group">
              <%= f.label :profile_image %><br />
              <%= f.file_field :avatar, class: "form-control mb-2"%>
            </div>
          <div class="row mad">
             <div class="col">
                <div class="field form-group">
                  <%= f.label :first_name %><br />
                  <%= f.text_field :first_name, class: "form-control mb-2", placeholder: "First Name", autofocus: true , required: true%>
                </div>
              </div>
              <div class="col">
                <div class="field form-group">
                  <%= f.label :last_name %><br />
                  <%= f.text_field :last_name, class: "form-control mb-2", placeholder: "Last Name", autofocus: true , required: true%>
                </div>
              </div>
            </div>

                <div class="field form-group">
                  <%= f.label :email %><br />
                  <%= f.email_field :email,class: "form-control",placeholder:"Email", autofocus: true, autocomplete: "email" %>
                </div>
        <div class="row mad">
          <div class="col">
            <div class="field form-group">
              <%= f.label :address %><br />
              <%= f.text_field :address, class: "form-control mb-2",placeholder: "Address", autofocus: true, autocomplete: "address", required: true %>
            </div>
          </div>
          <div class="col">
            <div class="field form-group">
              <%= f.label :city %><br />
              <%= f.select(:city, options_for_select(['Lahore', 'Karachi', 'Islamabad', 'Faislabad', 'Multan', 'Kashmir', 'Other']), {}, {class: "form-control mb-2"})%>
            </div>
          </div>
        </div>
         <div class="row mad">
          <div class="col">
            <div class="field form-group">
              <%= f.label :phone_no %><br />
              <%= f.number_field :phone_no, class: "form-control mb-2",placeholder: "Phone No.", autofocus: true, autocomplete: "Phone Number", required: true %>
            </div>
          </div>
          <div class="col">
            <div class="field form-group">
              <%= f.label :cnic_no %><br />
              <%= f.number_field :cnic_no, class: "form-control mb-2",placeholder: "CNIC No.", autofocus: true, autocomplete: "CNIC No", required: true %>
            </div>
          </div>
        </div>
        <div class="row mad">
          <div class="col">
            <div class="field form-group">
                  <%= f.label :cnic_image %><br />
                  <%= f.file_field :avatar1, class: "form-control mb-2"%>
            </div>
          </div>
          <div class="col">
            <div class="field form-group">
                    <% if resource.avatar1.attached? %>
                        <div class="field form-group">
                            <image src="<%= (url_for(resource.avatar1)) %>" class="cnic-image"></div>
                    <% else %>
                        <p>No image found</p>
                    <% end %>
            </div>
          </div>
        </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field form-group">
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password,class: "form-control",placeholder:"Password", autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation,class: "form-control",placeholder:"Confirm Password", autocomplete: "new-password" %>
            </div>

            <div class="field form-group">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password,class: "form-control",placeholder:"Password", autocomplete: "current-password" %>
            </div>
          </br>
            <div class="actions">
              <%= f.submit "Update",class: "btn btn-secondary" %>
            </div>
          <% end %>
            </div>
          </div>

          </br>

          </div>
      </div>
    </div>
</body>
