<h1 class="text-center pt-5">Current Ad</h1>
<hr class="w-25 mx-auto pt-5">

<div class="container">
<h2 class="text-info"><%= @ad.address%>-<%= @ad.city%></h2>
<div class="row">
  <div class="col-lg-7">
    <div id="carouselExampleIndicators" class="carousel slide" style="border:   2px solid #555; width:600px; data-ride="carousel">

      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner ">
        <div class="carousel-item active">
          <%= image_tag(@ad.avatar,height: '500', class: "d-block w-100")%>
        </div>
        <div class="carousel-item">
          <%= image_tag(@ad.avatar1,height: '500', class: "d-block w-100")%>
        </div>
        <div class="carousel-item">
          <%= image_tag(@ad.avatar2,height: '500', class: "d-block w-100")%>
        </div>
      </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
  </div>
  <div class="col-lg-5">
  <h3 class="text-info">Make An Enquiry</h3>
  <form>
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="name" class="form-control" placeholder="Enter Name">
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
  <label for="phone">Phone No.</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">+92</div>
        </div>
        <input type="tel" class="form-control" id="inlineFormInputGroup" placeholder="Phone No">
      </div>
  </div>
   <div class="form-group">
  <label for="message">Message</label>
  <textarea type="text" rows="2" class="form-control">

  </textarea>
  <p>By submitting this form,I agree to all terms.</p>
  <button type="button" class="btn btn-success pl-4 pr-4" style="border: 2px solid #555;">Call</button>
  <button type="button" class="btn btn-light pl-3 pr-3" style="border: 2px solid #555;">E-mail</button>
</form>
  </div>

</div>
<div>
  <h1 class="text-info mt-2" style="margin-left:20px;"><%=@ad.price %> Rs.<h1>
</div>
</div>
<div>
<hr>
<h1 class="text-center pt-5">Details and Description</h1>
<hr class="w-25 mx-auto pt-5">
</div>
<table class="table table-striped">
  <tbody>
    <tr>
      <td class="table-Actve">Title</td>
      <td class="table-Active">
        <%= @ad.title%>
      </td>
      <td class="table-Actve">City</td>
      <td class="table-Active">
        <%= @ad.city%>
      </td>
    </tr>
    <tr>
      <td class="table-Success">Address</td>
      <td class="table-Success">
        <%= @ad.address%>
      </td>
      <td class="table-Success">Area</td>
      <td class="table-Success">
        <%= @ad.area%>
      </td>
    </tr>
     <tr>
      <td class="table-Actve">Types</td>
      <td class="table-Active">
        <%= @ad.property_type%>
      </td>
      <td class="table-Actve">Purpose</td>
      <td class="table-Active">
        <%= @ad.purpose%>
      </td>
    </tr>
    <tr>
      <td class="table-Success">Developer Name</td>
      <td class="table-Success">
        <%= @ad.user.first_name %>
      </td>
      <td class="table-Success">Developer Phone</td>
      <td class="table-Success">
        <%= @ad.phone_no%>
      </td>
    </tr>
  </tbody>
</table>
<h3>Description<h3>
<hr>
<h6><%=@ad.description%></h6>
<hr>
</div>

<div>
  <%= render 'shared/ads_listing', title: "Related Ads", obj: @related_ads %>
</div>
