<h1 class="text-center pt-5">Current Ad</h1>
<hr class="w-25 mx-auto pt-5">

<div class="container">
<h2 class="text-info"><%= @ad.address%>-<%= @ad.city%></h2>
<div class="row">
  <div class="col-lg-6">
    <div id="carouselExampleIndicators" class="carousel slide car" data-ride="carousel">

      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner"style="border-radius:10px;">
        <div class="carousel-item active">
          <%= image_tag(@ad.avatar3,style: "width:100%; height:500px; border-radius:10px; object-fit: cover; background-size: cover;")%>
        </div>
        <div class="carousel-item">
          <%= image_tag(@ad.avatar4,style: "width:100%; height:500px; border-radius:10px; object-fit: cover; background-size: cover;")%>
        </div>
        <div class="carousel-item">
          <%= image_tag(@ad.avatar5,style: "width:100%; height:500px; border-radius:10px; object-fit: cover; background-size: cover;")%>
        </div>
      </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
  <h1 class="text-info mt-2" style="margin-left:10px;"><%=@ad.price %> Rs.<h1>
</div>
  </div>
  <div class="col-lg-6 mt-1 enqiry">
  <h3 class="text-info">Make An Enquiry</h3>
  <form>
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="name" class="form-control" placeholder="Enter Name">
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
  <label for="phone">Phone No.</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">+92</div>
        </div>
        <input type="tel" class="form-control" id="inlineFormInputGroup" placeholder="Phone No">
      </div>
  </div>
   <div class="form-group">
  <label for="message">Message</label>
  <textarea type="text" rows="2" class="form-control">
  </textarea>
  <% if @ad.user == current_user %>
      <%= link_to "Edit Ad", edit_ad_path(@ad), class: "btn btn-light pl-3 pr-3 custom-btn" %>
      <%= link_to "Delete Ad" , ad_path(@ad), method: :delete , data: {confirm: "Are you sure?"}, class: "btn btn-danger pl-3 pr-3 custom-btn" %>
  <% else  %>
      <p>By submitting this form,I agree to all terms.</p>
      <button type="button" class="btn btn-success pl-4 pr-4" style="border: 2px solid #555;">Call</button>
      <button type="button" class="btn btn-light pl-3 pr-3" style="border: 2px solid #555;">E-mail</button>
  <% end %>
</form>
  </div>
</div>
</div>
<style>
  .custom-btn {
    border: 2px solid #555;
  }
</style>
<div>
<hr>
<h1 class="text-center pt-5">Details and Description</h1>
<hr class="w-25 mx-auto pt-5">
</div>
<table class="table  table-striped">
  <tbody>
    <tr class="happy">
      <td class="table-Actve">Title</td>
      <td class="table-Active">
        <%= @ad.title%>
      </td>
      <td class="table-Actve">City</td>
      <td class="table-Active">
        <%= @ad.city%>
      </td>
    </tr>
    <tr class="happy">
      <td class="table-Success">Address</td>
      <td class="table-Success">
        <%= @ad.address%>
      </td>
      <td class="table-Success">Area</td>
      <td class="table-Success">
        <%= @ad.area%>
      </td>
    </tr>
    <tr class="happy">
      <td class="table-Actve">Types</td>
      <td class="table-Active">
        <%= @ad.property_type%>
      </td>
      <td class="table-Actve">Purpose</td>
      <td class="table-Active">
        <%= @ad.purpose%>
      </td>
    </tr>
    <tr class="happy">
      <td class="table-Success">Developer Name</td>
      <td class="table-Success">
        <%= @ad.user.first_name %>
      </td>
      <td class="table-Success">Developer Phone</td>
      <td class="table-Success">
        <%= @ad.phone_no%>
      </td>
    </tr>
  </tbody>
</table>
<h3>Description<h3>
<hr>
  <p style="font-size:18px; color:#808080;"><%=@ad.description%></p>
<hr>
</div>

<div>
  <%= render 'shared/my_slider', ads: @related_ads , title: "Related Ads" %>
</div>
