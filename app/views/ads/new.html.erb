<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 col-md-offset-3">
        <div class="card">
          <div class="card-header bg-dark" style="color:White">
              <h2>Add Property Details</h2>
          </div>
          <div class="card-body">
             <%= form_for @ad do |f| %>
            <div class="field form-group">
                <%= f.label :title %>
                <%= f.text_field :title , class: "form-control" , autofocus: true, placeholder: "Enter Title", required: true %>
            </div>
             <div class="field form-group">
                <%= f.label :address %>
                <%= f.text_field :address , class: "form-control" , autofocus: true, placeholder: "Enter Address", required: true %>
            </div>
            <div class="row">
              <div class= "col">
                <div class="field form-group">
                    <%= f.label :property_type %>
                    <%= f.select(:property_type, options_for_select(['Plot', 'House', 'Commercial','Other']), {}, {class: "form-control mb-2"}) %>
                </div>
              </div>
              <div class= "col">
                <div class="field form-group">
                    <%= f.label :area %>
                    <%= f.number_field :area , class: "form-control" , autofocus: true, placeholder: "Enter Area in Square", required: true %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class= "col">
                <div class="field form-group">
                    <%= f.label :city %>
                    <%= f.select(:city, options_for_select([['Lahore'], ['Karachi'], ['Islamabad'], ['Faislabad'], ['Multan'], ['Kashmir'], ['Other']]), {}, {class: "form-control mb-2"}) %>
                </div>
              </div>
              <div class= "col">
                <div class="field form-group">
                    <%= f.label :price %>
                    <%= f.number_field :price , class: "form-control" , autofocus: true, placeholder: "Enter Price ", required: true %>
                </div>
              </div>
            </div>
            <div class="field form-group">
                <%= f.label :phone_no %>
                <%= f.number_field :phone_no , class: "form-control" , autofocus: true, placeholder: "Enter Phone No", required: true %>
            </div>
            <div class="row">
              <div class="col">
                <div class="field form-group">
                  <%= f.label :pic1%><br />
                  <%= f.file_field :pic1, class: "form-control mb-2"%>
                </div>
              </div>
              <div class="col">
                <div class="field form-group">


                </div>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <div class="field form-group">


                </div>
              </div>
              <div class="col">
                  <div class="field form-group">


                </div>
              </div>
            </div>
            <div class="action-field">
              <%= f.submit "Submit" , class:" btn btn-primary"%>
              <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


