<table class="table table-striped table-hover">
   <thead>
    <tr>
      <th scope="col">Ad_id</th>
      <th scope="col">Title</th>
      <th scope="col">Creater_id</th>
      <th scope="col">Creater_name</th>
      <th scope="col">Created_at</th>
      <th scope="col">Featured</th>
      <th scope="col">State</th>
      <th scope="col">Deleted</th>
      <th scope="col">City</th>
      <th scope="col">Property_type</th>
      <th scope="col">Purpose</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @ads.each do |ad| %>
        <tr>
          <td><%= ad.id %></td>
          <td><%= ad.title %></td>
          <td><%= ad.user.id %></td>
          <td><%= "#{ad.user.first_name} #{ad.user.last_name}" %></td>
          <td><%= ad.created_at %></td>
          <td><%= ad.featured_ad %></td>
          <td><%= ad.state %></td>
          <td><%= ad.deleted %></td>
          <td><%= ad.city %></td>
          <td><%= ad.property_type %></td>
          <td><%= ad.purpose %></td>
          <td>
            <%= link_to "Show", ad_path(ad), class: "btn btn-success m-1" %>
            <%= link_to "Edit", edit_ad_path(ad), class: "btn btn-warning m-1" %>
            <%= link_to "Delete", ad_path(ad), method: :delete, class: "btn btn-danger m-1" %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>
